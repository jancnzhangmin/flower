<script>
  $(document).ready(function () {
      var fitcolor = function(){
          if($('#frontcolor').val()){
              $('#frontcolorlabel').css('background',$('#frontcolor').val());
          }
          if($('#shadowcolor').val()){
              $('#shadowcolorlabel').css('background',$('#shadowcolor').val());
          }
      };
     $('#frontcolor').change(function () {
         fitcolor();
     });
      $('#shadowcolor').change(function () {
          fitcolor();
      });
      fitcolor();
  });
</script>
<div class="alert alert-block alert-success" style="display:none;">
  <button type="button" class="close" data-dismiss="alert">
    <i class="icon-remove"></i>
  </button>

  <p>
    <strong>
      <i class="icon-ok"></i>
    </strong>
    保存成功
  </p>

</div>

<%= form_with(model:activecolor,local:true,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>
  <h3 class="header smaller lighter blue">
    活动标签颜色
    <small></small>
  </h3>
  <div class="form-group">
    <label class="col-sm-2 control-label no-padding-right" for="form-field-1"> 颜色名称 </label>
    <div class="col-sm-10">
      <%= f.text_field :name,class:"col-xs-10 col-sm-5" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label no-padding-right" for="form-field-1"> 标签颜色 </label>
    <div class="col-sm-10">
      <%= f.text_field :frontcolor,class:"col-xs-10 col-sm-5",id:'frontcolor' %>
      <label id="frontcolorlabel" class="col-xs-3" style="height:28px;">
        &nbsp;
      </label>

    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label no-padding-right" for="form-field-1"> 标签阴影颜色 </label>
    <div class="col-sm-10">
      <%= f.text_field :shadowcolor,class:"col-xs-10 col-sm-5",id:'shadowcolor' %>
      <label id="shadowcolorlabel" class="col-xs-3" style="height:28px;">
        &nbsp;
      </label>
    </div>
  </div>

  <div class="clearfix form-actions">
    <div class="col-md-offset-2 col-md-10">
      <button type="submit" name="commit" value="保存" class="btn btn-info" data-disable-with="保存" id="submit">
        <i class="icon-ok bigger-110"></i>
        保存
      </button>

    </div>
  </div>
<% end %>