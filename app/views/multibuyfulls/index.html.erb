<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      买满送多商品
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">活动名称</th>
                <th class="text-center">开始时间</th>
                <th class="text-center">结束时间</th>
                <th class="text-center">是否生效</th>
                <th class="text-center" width="360px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @multibuyfulls.each do |multibuyfull| %>
                <tr>
                  <td>
                    <%= multibuyfull.name %>
                  </td>
                  <td>
                    <%= multibuyfull.begintime.strftime('%Y-%m-%d %H:%M:%S') %>
                  </td>
                  <td>
                    <%= multibuyfull.endtime.strftime('%Y-%m-%d %H:%M:%S') %>
                  </td>
                  <td>
                    <%= multibuyfull.status %>
                  </td>
                  <td>
                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                      <a class="btn btn-xs btn-primary" href=<%= edit_multibuyfull_path(multibuyfull) %>>
                        <i class="fa fa-edit bigger-120"></i>
                        编辑
                      </a>
                      <a class="btn btn-xs btn-primary" href=<%= multibuyfull_multibuyfullbuyproducts_path(multibuyfull) %>>
                        <i class="fa fa-edit bigger-120"></i>
                        <% if multibuyfull.multibuyfullbuyproducts.size > 0 %>
                        购买商品（<%= multibuyfull.multibuyfullbuyproducts.size %>）
                          <% else %>
                          购买商品
                        <% end %>
                      </a>
                      <a class="btn btn-xs btn-primary" href=<%= multibuyfull_multibuyfullgiveproducts_path(multibuyfull) %>>
                        <i class="fa fa-edit bigger-120"></i>
                        <% if multibuyfull.multibuyfullgiveproducts.size > 0 %>
                          赠送商品（<%= multibuyfull.multibuyfullgiveproducts.size %>）
                        <% else %>
                          赠送商品
                        <% end %>
                      </a>
                      <a data-confirm="确认删除?" data-method="delete" class="btn btn-xs btn-danger" href=<%= multibuyfull_path(multibuyfull) %>>
                        <i class="fa fa-trash bigger-120"></i>
                        删除
                      </a>
                    </div>
                  </td>

                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="clearfix form-actions">
        <div class="col-md-12 text-right" data-turbolinks="false">
          <a class="btn btn-info" href=<%= new_multibuyfull_path %>>
            <i class="fa fa-plus bigger-110"></i>
            新增
          </a>
        </div>
      </div>






<%= render 'layerend' %>