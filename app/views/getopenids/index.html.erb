<script>
    $(document).ready(function(){
        var access_code = getUrlParam('code');
        if (access_code == null) {
            var fromurl = location.href;
            var myurl = 'https://open.weixin.qq.com/connect/oauth2/authorize?appid=wxb3d1ca1df413ce9d&redirect_uri=' + encodeURIComponent(fromurl)
                    + '&response_type=code&scope=snsapi_base&state=STATE#wechat_redirect&connect_redirect=1#wechat_redirect';
            location.href = myurl;
        } else {

            $.ajax({
                async : false,
                url : "http://artisan.ysdsoft.com/getopenids/getopenid",
                type : "GET",
                dataType : 'jsonp',
                jsonp : 'callback',
                timeout : 5000,
                data : {
                    code : access_code
                },
                success : function(jsonstr) {// 客户端jquery预先定义好的callback函数,成功获取跨域服务器上的json数据后,会动态执行这个callback函数
                    var openid = JSON.parse(jsonstr.access_token).openid;
                    location.href="http://artisanfront.ysdsoft.com/?openid=" + openid;
                },
                error : function(xhr) {
                }
            });

        }

        function getUrlParam(name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)"); //构造一个含有目标参数的正则表达式对象
            var r = window.location.search.substr(1).match(reg);  //匹配目标参数
            if (r != null) return unescape(r[2]); return null; //返回参数值
        }


    });
</script>