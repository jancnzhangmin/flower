<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      分类标签
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">分类标签</th>
                <th class="text-center">关键字</th>
                <th class="text-center">参与分类</th>
                <th class="text-center" width="320px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @clas.each do |cla| %>
                <tr>
                  <td>
                    <%= cla.name %>
                  </td>
                  <td>
                    <%= cla.keyword %>
                  </td>
                  <td align="center">
                    <% if cla.showinproduct == 1 %>
                      <i class="fa fa-check green"></i>
                    <% end %>
                  </td>
                  <td>
                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                      <a class="btn btn-xs btn-link" href=<%= up_cla_path(cla) %>>
                        <i class="fa fa-sort-up bigger-120" style="margin-top: 5px;"></i>

                      </a>
                      <a class="btn btn-xs btn-link" style="margin-top: -5px;" href=<%= down_cla_path(cla) %>>
                        <i class="fa fa-sort-desc bigger-120"></i>

                      </a>
                      <a class="btn btn-xs btn-primary" href=<%= edit_cla_path(cla) %>>
                        <i class="fa fa-edit bigger-120"></i>
                        编辑
                      </a>
                      <a class="btn btn-xs btn-primary" href=<%= cla_claproducts_path(cla) %>>
                        <i class="fa fa-edit bigger-120"></i>
                        标签商品（<%= cla.products.count %>）
                      </a>
                      <a data-confirm="确认删除?" data-method="delete" class="btn btn-xs btn-danger" href=<%= cla_path(cla) %>>
                        <i class="fa fa-trash bigger-120"></i>
                        删除
                      </a>
                    </div>
                  </td>

                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="clearfix form-actions">
        <div class="col-md-12 text-right" data-turbolinks="false">
          <a class="btn btn-info" href=<%= new_cla_path %>>
            <i class="fa fa-plus bigger-110"></i>
            新增
          </a>
        </div>
      </div>






<%= render 'layerend' %>