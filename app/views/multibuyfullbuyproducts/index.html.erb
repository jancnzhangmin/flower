<%= render 'layerbegin' %>

<script>
    $(document).ready(function () {


    });
</script>

<div class="page-content">
  <div class="page-header">
    <h1>
      <%= @multibuyfull.name %>--购买商品
    </h1>
  </div><!-- /.page-header -->

  <div class="row">

    <div class="tabbable">
      <ul class="nav nav-tabs" id="myTab" style="height: 34px;">
        <li class="active">
          <a data-toggle="tab" href="#home">
            <i class="green icon-home bigger-110"></i>
            已加入活动
          </a>
        </li>

        <li>
          <a data-toggle="tab" href="#profile">
            未加入活动
            <span class="badge badge-danger"><%=@nonactivedetails.count %></span>
          </a>
        </li>

      </ul>

      <div class="tab-content"  style="padding: 0px;">
        <div id="home" class="tab-pane in active">

          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover" style="margin-bottom: 0px;">
              <thead>
              <tr>
                 <th class="text-center">产品名称</th>
                <th class="text-center">成本</th>
                <th class="text-center">售价</th>
                <th class="text-center">单位</th>
                <th class="text-center">规格</th>
                <th class="text-center">状态</th>
                <th class="text-center" width="150px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @activedetails.each do |activedetail| %>
                <tr>

                  <td>
                    <%= activedetail.product.name %>
                  </td>
                  <td>
                    <%= activedetail.product.cost %>
                  </td>
                  <td>
                    <%= activedetail.product.price %>
                  </td>
                  <td>
                    <%= activedetail.product.unit %>
                  </td>
                  <td>
                    <%= activedetail.product.spec %>
                  </td>
                  <td>
                    <% if activedetail.product.grounding == 1 %>
                      <span class="green">上架</span>
                    <% else %>
                      <span class="grey">下架</span>
                    <% end %>
                  </td>
                  <td>
                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                      <a class="btn btn-xs btn-danger" data-confirm="确认移除?" data-method="delete" href=<%= multibuyfull_multibuyfullbuyproduct_path(@multibuyfull,activedetail) %>>
                        <i class="fa fa-trash bigger-120"></i>
                        移除
                      </a>
                    </div>
                  </td>

                </tr>
              <% end %>
              </tbody>
            </table>
          </div>

        </div>

        <div id="profile" class="tab-pane">


          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover" style="margin-bottom: 0px;">
              <thead>
              <tr>

                <th class="text-center">产品名称</th>
                <th class="text-center">成本</th>
                <th class="text-center">售价</th>
                <th class="text-center">单位</th>
                <th class="text-center">规格</th>
                <th class="text-center">状态</th>
                <th class="text-center" width="100px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @nonactivedetails.each do |f| %>
                <tr>
                  <td>
                    <%= f.name %>
                  </td>
                  <td>
                    <%= f.cost %>
                  </td>
                  <td>
                    <%= f.price %>
                  </td>
                  <td>
                    <%= f.unit %>
                  </td>
                  <td>
                    <%= f.spec %>
                  </td>
                  <td>
                    <% if f.grounding == 1 %>
                      <span class="green">上架</span>
                    <% else %>
                      <span class="grey">下架</span>
                    <% end %>
                  </td>
                  <td>
                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                      <a class="btn btn-xs btn-primary" href=<%= new_multibuyfull_multibuyfullbuyproduct_path(@multibuyfull,f) %>>
                        <i class="fa fa-edit bigger-120"></i>
                        加入活动
                      </a>
                    </div>
                  </td>

                </tr>
              <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>


  </div>









