<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      首次购买
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">活动名称</th>
                <th class="text-center">返现比例</th>
                <th class="text-center">活动开始时间</th>
                <th class="text-center">活动结束时间</th>
                <th class="text-center">长期有效</th>
                <th class="text-center">状态</th>
                <th class="text-center" width="250px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @firstbuyactives.each do |firstbuyactive| %>
                <tr>
                  <td>
                    <%= firstbuyactive.name %>
                  </td>
                  <td>
                    <%= firstbuyactive.owerratio %>%
                  </td>
                  <td>
                    <%= firstbuyactive.begintime ? firstbuyactive.begintime.strftime('%Y-%m-%d %H:%M:%S') : '' %>
                  </td>
                  <td>
                    <%= firstbuyactive.endtime ? firstbuyactive.endtime.strftime('%Y-%m-%d %H:%M:%S') : '' %>
                  </td>
                   <td>
                    <% if firstbuyactive.long == 1 %>
                        <i class="fa fa-check green"></i>
                    <% end %>
                  </td>
                  <td>
                    <% if firstbuyactive.status == 1 %>
                    <span class="green">有效</span>
                      <% else %>
                      <span class="grey">停用</span>
                      <% end %>
                  </td>
                  <td>
                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                      <a class="btn btn-xs btn-primary" href=<%= edit_firstbuyactive_path(firstbuyactive) %>>
                        <i class="fa fa-edit bigger-120"></i>
                        编辑
                      </a>
                      <a class="btn btn-xs btn-info" href=<%= firstbuyactive_firstbuyactivedetails_path(firstbuyactive) %>>
                        <i class="fa fa-edit bigger-120"></i>
                        活动产品（<%= firstbuyactive.firstbuyactivedetails.count %>）
                      </a>
                      <a data-confirm="确认删除?" data-method="delete" class="btn btn-xs btn-danger" href=<%= firstbuyactive_path(firstbuyactive) %>>
                        <i class="fa fa-trash bigger-120"></i>
                        删除
                      </a>
                    </div>
                  </td>

                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="clearfix form-actions">
        <div class="col-md-12 text-right" data-turbolinks="false">
          <a class="btn btn-info" href=<%= new_firstbuyactive_path %>>
            <i class="fa fa-plus bigger-110"></i>
            新增
          </a>
        </div>
      </div>






<%= render 'layerend' %>