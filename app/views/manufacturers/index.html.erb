<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      厂商
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">厂商名称</th>
                <th class="text-center">联系人</th>
                <th class="text-center">联系方式</th>
                <th class="text-center">地址</th>
                <th class="text-center">备注</th>
                <th class="text-center" width="150px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @manufacturers.each do |manufacturer| %>
                  <tr>
                    <td>
                      <%= manufacturer.name %>
                    </td>
                    <td>
                      <%= manufacturer.contact %>
                    </td>
                    <td>
                      <%= manufacturer.contactphone %>
                    </td>
                    <td>
                      <%= manufacturer.address %>
                    </td>
                    <td>
                      <%= manufacturer.summary %>
                    </td>

                    <td>
                      <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                        <a class="btn btn-xs btn-primary" href=<%= edit_manufacturer_path(manufacturer) %>>
                          <i class="fa fa-edit bigger-120"></i>
                          编辑
                        </a>
                        <a data-confirm="确认删除?" data-method="delete" class="btn btn-xs btn-danger" href=<%= manufacturer_path(manufacturer) %>>
                          <i class="fa fa-trash bigger-120"></i>
                          删除
                        </a>
                      </div>
                    </td>

                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="clearfix form-actions">
        <div class="col-md-12 text-right" data-turbolinks="false">
          <a class="btn btn-info" href=<%= new_manufacturer_path %>>
            <i class="fa fa-plus bigger-110"></i>
            新增
          </a>
        </div>
      </div>






<%= render 'layerend' %>