<%= render 'layerbegin' %>

<script>
    $(document).ready(function () {
        $("input[name='nonallcheck']").change(function () {
            if($(this).is(':checked')) {
                $(".noncheck").prop('checked', true);
            }else{
                $(".noncheck").prop('checked', false);
            }
        });

        $("input[name='isallcheck']").change(function () {
            if($(this).is(':checked')) {
                $(".ischeck").prop('checked', true);
            }else{
                $(".ischeck").prop('checked', false);
            }
        });


    });
</script>

<div class="page-content">
  <div class="page-header">
    <h1>
      <%= @explain.name %>--说明产品
    </h1>
  </div><!-- /.page-header -->

  <div class="row">

    <div class="tabbable">
      <ul class="nav nav-tabs" id="myTab" style="height: 34px;">
        <li class="active">
          <a data-toggle="tab" href="#home">
            <i class="green icon-home bigger-110"></i>
            已加入活动
          </a>
        </li>

        <li>
          <a data-toggle="tab" href="#profile">
            未加入活动
            <span class="badge badge-danger"><%=@nonactivedetails.count %></span>
          </a>
        </li>

      </ul>

      <div class="tab-content"  style="padding: 0px;">
        <div id="home" class="tab-pane in active">

          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover" style="margin-bottom: 0px;">
              <thead>
              <tr>
                <th class="text-center" style="width: 100px;">
                  <table>
                    <tr>
                      <td style="padding:0px;">
                        <div class="checkbox" style="margin-top: 0px;margin-bottom: 0px;">
                          <label>
                            <input name="isallcheck" type="checkbox" class="ace" />
                            <span class="lbl"></span>
                          </label>
                        </div>
                      </td>
                      <td style="padding: 0px;padding-left:8px;">
                        <%= form_tag removeexplain_explain_explainproducts_path(@explain) do %>
                          <%= submit_tag "移除活动",class:'btn btn-xs btn-primary' %>
                          </td>
                          </tr>
                          </table>


                          </th>
                <th class="text-center">产品名称</th>
                <th class="text-center">成本</th>
                <th class="text-center">售价</th>
                <th class="text-center">单位</th>
                <th class="text-center">规格</th>
                <th class="text-center">状态</th>
                <th class="text-center" width="100px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @activedetails.each do |activedetails| %>
                <tr>
                  <td align="center">
                    <div class="checkbox" style="margin-top: 0px;margin-bottom: 0px;">
                      <label>
                        <input type="checkbox" name="remove_ids[]" class="ace ischeck" value=<%= activedetails.id %> />
                        <span class="lbl"></span>
                      </label>
                    </div>

                  </td>
                  <td>
                    <%= activedetails.name %>
                  </td>
                  <td>
                    <%= activedetails.cost %>
                  </td>
                  <td>
                    <%= activedetails.price %>
                  </td>
                  <td>
                    <%= activedetails.unit %>
                  </td>
                  <td>
                    <%= activedetails.spec %>
                  </td>
                  <td>
                    <% if activedetails.grounding == 1 %>
                      <span class="green">上架</span>
                    <% else %>
                      <span class="grey">下架</span>
                    <% end %>
                  </td>
                  <td>
                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                      <a class="btn btn-xs btn-danger" href=<%= singleremove_explain_explainproduct_path(@explain,activedetails) %>>
                        <i class="fa fa-edit bigger-120"></i>
                        移除活动
                      </a>
                    </div>
                  </td>

                </tr>
              <% end %>
              <% end %>
              </tbody>
            </table>
          </div>

        </div>

        <div id="profile" class="tab-pane">


          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover" style="margin-bottom: 0px;">
              <thead>
              <tr>
                <th class="text-center" width="100px;">
                  <table>
                    <tr>
                      <td style="padding:0px;">
                        <div class="checkbox" style="margin-top: 0px;margin-bottom: 0px;">
                          <label>
                            <input name="nonallcheck" type="checkbox" class="ace" />
                            <span class="lbl"></span>
                          </label>
                        </div>
                      </td>
                      <td style="padding: 0px;padding-left:8px;">
                        <%= form_tag addexplain_explain_explainproducts_path(@explain) do %>
                          <%= submit_tag "加入活动",class:'btn btn-xs btn-primary' %>
                      </td>
                    </tr>
                  </table>


                </th>
                <th class="text-center">产品名称</th>
                <th class="text-center">成本</th>
                <th class="text-center">售价</th>
                <th class="text-center">单位</th>
                <th class="text-center">规格</th>
                <th class="text-center">状态</th>
                <th class="text-center" width="100px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @nonactivedetails.each do |f| %>
                <tr>
                  <td align="center">
                    <div class="checkbox" style="margin-top: 0px;margin-bottom: 0px;">
                      <label>
                        <input type="checkbox" name="product_ids[]" class="ace noncheck" value=<%= f.id %> />
                        <span class="lbl"></span>
                      </label>
                    </div>

                  </td>
                  <td>
                    <%= f.name %>
                  </td>
                  <td>
                    <%= f.cost %>
                  </td>
                  <td>
                    <%= f.price %>
                  </td>
                  <td>
                    <%= f.unit %>
                  </td>
                  <td>
                    <%= f.spec %>
                  </td>
                  <td>
                    <% if f.grounding == 1 %>
                      <span class="green">上架</span>
                    <% else %>
                      <span class="grey">下架</span>
                    <% end %>
                  </td>
                  <td>
                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                      <a class="btn btn-xs btn-primary" href=<%= singleadd_explain_explainproduct_path(@explain,f) %>>
                        <i class="fa fa-edit bigger-120"></i>
                        加入活动
                      </a>
                    </div>
                  </td>

                </tr>
              <% end %>
              <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>


  </div>









