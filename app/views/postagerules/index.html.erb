<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      邮费规则
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">名称</th>
                <th class="text-center">起步邮费</th>
                <th class="text-center">订单正品数量</th>
                <th class="text-center">达到数量邮费</th>
                <th class="text-center">状态</th>
                <th class="text-center" width="200px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @postagerules.each do |postagerule| %>
                  <tr>
                    <td>
                      <%= postagerule.name %>
                    </td>
                    <td>
                      <%= postagerule.startpostage %>
                    </td>
                    <td>
                      <%= postagerule.ordernumber %>
                    </td>
                    <td>
                      <%= postagerule.endpostage %>
                    </td>
                    <td>
                      <%= postagerule.status %>
                    </td>

                    <td>
                      <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                        <a class="btn btn-xs btn-primary" href=<%= edit_postagerule_path(postagerule) %>>
                          <i class="fa fa-edit bigger-120"></i>
                          编辑
                        </a>
                        <a class="btn btn-xs btn-success" href=<%= postagerule_postareas_path(postagerule) %>>
                          <i class="fa fa-edit bigger-120"></i>
                          邮费区域
                        </a>
                        <a data-confirm="确认删除?" data-method="delete" class="btn btn-xs btn-danger" href=<%= postagerule_path(postagerule) %>>
                          <i class="fa fa-trash bigger-120"></i>
                          删除
                        </a>
                      </div>
                    </td>

                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="clearfix form-actions">
        <div class="col-md-12 text-right" data-turbolinks="false">
          <a class="btn btn-info" href=<%= new_postagerule_path %>>
            <i class="fa fa-plus bigger-110"></i>
            新增
          </a>
        </div>
      </div>






<%= render 'layerend' %>