<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      代理级别
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">级别名称</th>
                <th class="text-center">参与代理核算</th>
                <th class="text-center">代理金额</th>
                <th class="text-center">任务额</th>
                <th class="text-center" width="170px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @agentlevels.each do |agentlevel| %>
                  <tr>
                    <td>
                      <%= agentlevel.name %>
                    </td>
                    <td>
                      <% if agentlevel.grant == 1 %>
                        <i class="icon-ok green"></i>
                      <% end %>
                    </td>
                    <td>
                      <%= agentlevel.amount %>
                    </td>
                    <td>
                      <%= agentlevel.task %>
                    </td>

                    <td>
                      <table>
                        <tr>
                          <td style="border-top:0px;padding:0px;">
                            <div class="spinner-buttons input-group-btn">
                              <a href=<%= order_up_agentlevel_path(agentlevel)  %>>
                              <button type="button" class="btn spinner-up btn-xs btn-info" style="padding: 0px 4px;height: 22px;margin-top: 0px;margin-left: -4px;">
                                <i class="icon-caret-up"></i>
                              </button>
                              </a>
                              <a href=<%= order_down_agentlevel_path(agentlevel)  %>>
                              <button type="button" class="btn spinner-down btn-xs btn-info" style="padding: 0px 4px;height: 22px;margin-top: 0px;margin-right: 1px;margin-left: -4px;">
                                <i class="icon-caret-down"></i>
                              </button>
                              </a>
                            </div>
                          </td>
                          <td style="border-top:0px;padding:0px;">
                            <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                              <a class="btn btn-xs btn-primary" href=<%= edit_agentlevel_path(agentlevel) %>>
                                <i class="fa fa-edit bigger-120"></i>
                                编辑
                              </a>
                              <a data-confirm="确认删除?" data-method="delete" class="btn btn-xs btn-danger" href=<%= agentlevel_path(agentlevel) %>>
                                <i class="fa fa-trash bigger-120"></i>
                                删除
                              </a>
                            </div>
                          </td>
                        </tr>
                      </table>


                    </td>

                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="clearfix form-actions">
<div class="col-md-8 red" style="padding-top: 10px;">
  <i class="fa fa-warning"></i>
  <span>代理级别由高到低进行排序</span>
</div>
        <div class="col-md-4 text-right" data-turbolinks="false">



          <a class="btn btn-info" href=<%= new_agentlevel_path %>>
            <i class="fa fa-plus bigger-110"></i>
            新增
          </a>
        </div>
      </div>






<%= render 'layerend' %>